@using SimpleShop.Application.Carts.Queries.GetCart
@model CartDTO

@{
    ViewData["Title"] = "Shopping Cart";
}



<!--====== App Content ======-->
<div class="app-content">
    <!--====== Section 2 ======-->
    <div class="u-s-p-b-60">

        <!--====== Section Intro ======-->
        <div class="section__intro u-s-m-b-60">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section__text-wrap">
                            <h1 class="section__heading u-c-secondary">SHOPPING CART</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Intro ======-->
        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 u-s-m-b-30">
                        <div class="table-responsive">
                            <table class="table-p">
                                <tbody>
                                    @foreach(var item in Model.Items)
                                    {
                                        <tr>
                                            <td>
                                                <div class="table-p__box">
                                                    <div class="table-p__img-wrap">

                                                        <img class="u-img-fluid" src="images/products/@item.ProductImageName" alt="">
                                                    </div>
                                                    <div class="table-p__info">

                                                        <span class="table-p__name">

                                                            <a href="product-detail.html">@item.ProductName</a>
                                                        </span>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>

                                                <span class="table-p__price">@item.UnitPrice.ToString("N2")</span>
                                            </td>
                                            <td>
                                            </td>
                                            <td>
                                                <form asp-controller="Cart" asp-action="RemoveItem" method="post">
                                                <div class="table-p__del-wrap">
                                                    <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                                    <button type="submit" class="far fa-trash-alt"></button>
                                                </div>

                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Content ======-->
    </div>
    <!--====== End - Section 2 ======-->
    <!--====== Section 3 ======-->
    <div class="u-s-p-b-60">

        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 u-s-m-b-30">
                        <form class="f-cart">
                            <div class="row">
                                <div class="col-lg-4 col-md-6 u-s-m-b-30">
                                    <div class="f-cart__pad-box">
                                        <div class="u-s-m-b-30">
                                            <table class="f-cart__table">
                                                <tbody>
                                                    <tr>
                                                        <td>SHIPPING</td>
                                                        <td>$0.00</td>
                                                    </tr>
                                                    <tr>
                                                        <td>TAX</td>
                                                        <td>$0.00</td>
                                                    </tr>
                                                    <tr>
                                                        <td>SUBTOTAL</td>
                                                        <td>@Model.TotalAmount.ToString("N2")</td>
                                                    </tr>
                                                    <tr>
                                                        <td>GRAND TOTAL</td>
                                                        <td>@Model.TotalAmount.ToString("N2")</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <div>
                                            <button class="btn btn--e-brand-b-2" type="submit" asp-controller="Cart" asp-action="Checkout"> PROCEED TO CHECKOUT</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Content ======-->
    </div>
    <!--====== End - Section 3 ======-->
</div>
<!--====== End - App Content ======-->