@using SimpleShop.Application.Users.Queries.GetUserManagmentList
@model List<UserManagmentDTO>
@{
    ViewData["Title"] = "Users";
}
<h2>Users</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>UserName</th>
            <th>Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    @if (user.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">InActive</span>
                    }
                </td>
                <td>
                    @* <a asp-action="ManageRoles" asp-route-id="@user.Id" class="btn btn-sm btn-primary">نقش‌ها</a> *@

                    <form asp-action="ToggleStatus" asp-route-id="@user.UserId" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm @(user.IsActive ? "btn-warning" : "btn-success")">
                            @(user.IsActive ? "InActive‌" : "Active‌")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
