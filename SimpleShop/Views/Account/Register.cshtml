@using SimpleShop.Web.Models.Account
@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="u-s-p-y-60">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9 col-md-12">
                <div class="reg-page-container">
                    
                    <div class="reg-page-content">
                        <div class="page-title u-s-m-b-30">
                            <h2 class="u-h2">NEW CUSTOMER</h2>
                        </div>
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger u-s-m-b-30"></div>

                        <form class="reg-page-form" asp-controller="Account" asp-action="Register" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
                            
                            <div class="u-s-m-b-15">
                                <label for="reg-fname">Full Name <span class="astk">*</span></label>
                                <input asp-for="PersonName" class="input-text input-text--primary-style" type="text" id="reg-fname" placeholder="Enter Your Full Name">
                                <span asp-validation-for="PersonName" class="text-danger"></span>
                            </div>

                            <div class="u-s-m-b-15">
                                <label for="reg-email">Email <span class="astk">*</span></label>
                                <input asp-for="Email" class="input-text input-text--primary-style" type="email" id="reg-email" placeholder="Enter Your Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="u-s-m-b-15">
                                <label for="reg-password">Password <span class="astk">*</span></label>
                                <input asp-for="Password" class="input-text input-text--primary-style" type="password" id="reg-password" placeholder="Enter Your Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="u-s-m-b-15">
                                <label for="reg-confirm-password">Confirm Password <span class="astk">*</span></label>
                                <input asp-for="ConfirmPassword" class="input-text input-text--primary-style" type="password" id="reg-confirm-password" placeholder="Confirm Your Password">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            
                            <div class="u-s-m-b-45">
                                <button class="btn btn--e-transparent-brand-b-2" type="submit">CREATE</button>
                            </div>
                            
                            <a class="u-c-brand" asp-controller="Account" asp-action="Login">Already have an Account? Login here</a>
                        </form>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}